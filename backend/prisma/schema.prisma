generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User
model User {
  id       String   @id @default(cuid()) @map("_id")
  createAt DateTime @default(now())
  name     String
  password String
  boxes    Boxe[]
}

// Book
model Book {
  id        String   @id @default(cuid()) @map("_id")
  createAt  DateTime @default(now())
  title     String
  author    String
  publisher String
  boxes     Boxe[]

  @@map("books")
}

// Boxe
model Boxe {
  id       String   @id @default(cuid()) @map("_id")
  createAt DateTime @default(now())
  books    Book     @relation(fields: [bookId], references: [id])
  bookId   String
  user     User     @relation(fields: [userId], references: [id])
  userId   String
}
